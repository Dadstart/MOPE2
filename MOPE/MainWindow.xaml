<Window x:Class="B4.Mope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B4.Mope"
        xmlns:localUI="clr-namespace:B4.Mope.UI"
        mc:Ignorable="d"
        Title="MOPE: Office Package Editor" Height="600" Width="800">
	<Window.CommandBindings>
		<CommandBinding Command="Help" CanExecute="CommandBinding_HelpCanExecute" Executed="CommandBinding_HelpExecuted"/>
		<CommandBinding Command="Open" CanExecute="CommandBinding_OpenCanExecute" Executed="CommandBinding_OpenExecuted"/>
		<CommandBinding Command="Save" CanExecute="CommandBinding_SaveCanExecute" Executed="CommandBinding_SaveExecuted"/>
	</Window.CommandBindings>
	<Window.Resources>
		<localUI:BoolToGridLengthConverter x:Key="expanderGridLengthConverter" />
		<local:Data x:Key="appData" />
	</Window.Resources>
	<DockPanel>
		<Menu IsMainMenu="True" x:Name="menuMain" DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Open" Icon="📂" InputGestureText="Ctrl+O" Command="ApplicationCommands.Open"/>
				<MenuItem Header="_Save" Icon="💾" InputGestureText="Ctrl+S" Command="ApplicationCommands.Save"/>
				<MenuItem Header="Save _As" Command="ApplicationCommands.SaveAs"/>
				<Separator />
				<MenuItem Header="E_xit" />
			</MenuItem>
			<MenuItem Header="_View" />
			<MenuItem Header="_Tools">
				<MenuItem Header="_Options" Icon="⛭"/>
			</MenuItem>
			<MenuItem Header="_Help">
				<MenuItem Header="_Feedback" Icon="📣"/>
				<MenuItem Header="_About" Icon="❔" Command="ApplicationCommands.Help"/>
			</MenuItem>
		</Menu>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" MinWidth="240" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid x:Name="gridContentViews" Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="{Binding Path=IsExpanded, ElementName=expanderPartsView, Converter={StaticResource expanderGridLengthConverter}}" />
					<RowDefinition Height="{Binding Path=IsExpanded, ElementName=expanderFilesView, Converter={StaticResource expanderGridLengthConverter}}" />
				</Grid.RowDefinitions>
				<Expander x:Name="expanderPartsView" Header="Parts (Files)" Grid.Row="0" IsExpanded="True">
					<ListView x:Name="listViewParts">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="URI" Width="120" DisplayMemberBinding="{Binding Name}"/>
								<GridViewColumn Header="Content Type" Width="10" DisplayMemberBinding="{Binding ContentType}"/>
								<GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}" />
							</GridView>
						</ListView.View>
					</ListView>
				</Expander>
				<Expander x:Name="expanderFilesView" Header="Zip Archive Layout" Grid.Row="1" IsExpanded="True">
					<TreeView x:Name="treeViewZipFiles"></TreeView>
				</Expander>
			</Grid>
			<GridSplitter Grid.Column="0" Width="5"/>
			<TabPanel Background="LightPink" Grid.Column="1">

			</TabPanel>
		</Grid>
	</DockPanel>
</Window>
