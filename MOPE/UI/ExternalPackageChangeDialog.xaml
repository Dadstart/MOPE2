<Window x:Class="B4.Mope.UI.ExternalPackageChangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B4.Mope.UI"
        mc:Ignorable="d"
        Title="Original file changed" Height="136" Width="399"
		Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
		<Label>The original package has changed. What do you want to do?</Label>
		<Button x:Name="buttonIgnore" Margin="5,5" Click="buttonIgnore_Click">_Ignore and keep original package in the editor</Button>
		<Button x:Name="buttonDiscard" Margin="5,5"  Click="buttonDiscard_Click">_Discard any changes and reload package</Button>
		<Button x:Name="buttonDiff" Margin="5,5"  Click="buttonDiff_Click">Launch new window to compare the changes (experimental)</Button>
	</StackPanel>
</Window>
