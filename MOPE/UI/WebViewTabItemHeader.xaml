<UserControl x:Class="B4.Mope.UI.WebViewTabItemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:B4.Mope.UI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="60">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Text}"/>
        <Button Margin="3,0,0,0" Padding="5,0" FontWeight="Bold" Background="Transparent" BorderThickness="0" Click="Close_Click">X</Button>
    </StackPanel>
</UserControl>
