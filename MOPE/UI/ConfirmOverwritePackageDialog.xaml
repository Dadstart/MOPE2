<Window x:Class="B4.Mope.UI.ConfirmOverwritePackageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B4.Mope.UI"
        mc:Ignorable="d"
        Title="Overwrite the original file?" MinHeight="120" MinWidth="350" ResizeMode="NoResize" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight"
		Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
		<Label Padding="0, 10">Are you sure you want to overwrite the existing package?</Label>
		<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
			<Button x:Name="buttonYes" Margin="0,0,25,0" Click="buttonYes_Click" Padding="10" MinWidth="75">_Yes</Button>
			<Button x:Name="buttonNo" Click="buttonNo_Click" Padding="10" MinWidth="75">_No</Button>
		</StackPanel>
		<CheckBox x:Name="alwaysOvewriteCheckbox" Margin="0,25,0,15">
			<!--<CheckBox.LayoutTransform>
				<ScaleTransform ScaleX="0.50" ScaleY="0.50"/>
			</CheckBox.LayoutTransform>-->
			A_lways overwrite package
		</CheckBox>
	</StackPanel>
</Window>
